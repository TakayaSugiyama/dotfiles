[commit]
	template = ~/dotfiles/.commit_template
[ghq]
	root = ~/project
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vimdiff "$LOCAL" "$REMOTE"
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[init]
	defaultBranch = main
[core]
	editor = vim
[grep]
  linenumber = true
