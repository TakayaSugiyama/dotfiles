{
  "suggest.enablePreview": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "json",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "ruby",
    "prisma",
    "c"
  ],
  "diagnostic.displayByAle": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.definitions": true,
  "tsserver.log": "normal",
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "experimentalFeaturesEnabled": false,
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "onTypeFormatting",
          "selectionRanges",
          "semanticHighlighting",
          "completion"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    }
  },
  "svelte.enable-ts-plugin": false
}
